{
  "compilerOptions": {
    "target": "ES2020", // JS version to compile to
    "module": "commonjs", // module system
    "strict": true, // enable all strict type-checking
    "esModuleInterop": true, // allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // skip type checking for node_modules
    "outDir": "./dist", // output directory for compiled files
    "rootDir": "./src", // source files location
    "resolveJsonModule": true, // allow importing JSON files
    "moduleResolution": "node", // how modules get resolved
    "isolatedModules": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
